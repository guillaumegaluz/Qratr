- content_for :custom_head do
  %title= "Qratr | #{@playlist.name}"

#player
  .container
    %ul
      %li.track-artist
      %li.track-title
      %li.soundcloud-logo
        %a{:href => "", :target => 'blank'}
          = image_tag("http://www.iconsdb.com/icons/preview/orange/soundcloud-xxl.png")

.container
  .logo
    = image_tag("logo.png")
    
.playlist-container.container
  .playlist-title= @playlist.name

  - @playlist.tracks.each do |track|
    .track-container{'data-track-id' => track.id}
      .artwork
        = image_tag(track.decorate.artwork_url)
      .metadata
        .title= track.title
        .artist= track.artist

.container
  %a.prev{:href => prev_playlist_url(@playlist.id)}
    %span.icon-prev
  %a.next{:href => next_playlist_url(@playlist.id)}
    %span.icon-next

.container
  .footer
    %ul
      %li About
      %span.separator •
      %li Email
      %span.separator •
      %li Github



%script{:src => "//connect.soundcloud.com/sdk.js"}
:javascript
  SC.initialize({
    client_id: "7b0148ec311a1ffa34c7e0248ed2c9de",
  });
  $(function() {
    window.playlist = new Playlist(#{@playlist.as_json_with_tracks.to_json});
    new PlaylistView({model: playlist});
    window.player = new PlayerView();
  });
